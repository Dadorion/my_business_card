{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["react-app", "react-app/jest"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": 2,
        "import/order": [
            2,
            {
                "groups": ["external", "builtin", "index", "sibling", "parent", "internal", "type"],
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                },
                "newlines-between": "always-and-inside-groups"
            }
        ]
    }
}